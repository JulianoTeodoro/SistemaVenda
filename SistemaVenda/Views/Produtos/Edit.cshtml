@model SistemaVenda.Models.ProdutoFormViewModel;

@{
    ViewData["Title"] = "Editar produto";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-4">

            <form asp-action="Edit" method="post">

                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Produto.Id" />
                <input type="hidden" asp-for="Produto.Categoria" />

                <div class="form-group">
                    <label asp-for="Produto.Nome" class="control-label"></label>
                    <input asp-for="Produto.Nome" class="form-control" />
                    <span asp-validation-for="Produto.Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Produto.Descricao" class="control-label"></label>
                    <input asp-for="Produto.Descricao" type="text" class="form-control" />
                    <span asp-validation-for="Produto.Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Produto.Quantidade" class="control-label"></label>
                    <input asp-for="Produto.Quantidade" type="number" class="form-control" />
                    <span asp-validation-for="Produto.Quantidade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Produto.Valor" class="control-label"></label>
                    <input asp-for="Produto.Valor" type="number" class="form-control" />
                    <span asp-validation-for="Produto.Valor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Produto.CategoriaId" class="control-label"></label>
                    <select asp-for="Produto.CategoriaId" asp-items="@(new SelectList(Model.Categorias, "Id", "Nome"))" class="form-control"></select>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-info">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

